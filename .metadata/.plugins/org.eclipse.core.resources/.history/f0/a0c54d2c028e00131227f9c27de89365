import java.io.File;
import java.net.URISyntaxException;
import java.security.CodeSource;


public class HPAProgram {
	static {
		CodeSource codeSource = HPAProgram.class.getProtectionDomain().getCodeSource();
		File jarFile = null;
		try {
			jarFile = new File(codeSource.getLocation().toURI().getPath());
		} catch (URISyntaxException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		File parentDir = jarFile.getParentFile();
		File dllFile = new File(parentDir, "jni/hpaprogram.ddl");
		System.load(dllFile.getPath());
		
		System.loadLibrary("hpaprogram"); // hello.dll (Windows) or libhello.so (Unixes)
	}
	private native void sayHello();
	  
	public static void main(String[] args) {
		MapWindowController map = new MapWindowController();		
	}
}