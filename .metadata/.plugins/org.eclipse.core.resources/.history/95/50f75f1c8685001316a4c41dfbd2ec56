import java.util.Map;
import java.awt.Point;
public class GraphSpaceNode extends SearchSpaceNode {
	Map<SearchSpaceNode, Double>cost_map;
	public GraphSpaceNode (Map<SearchSpaceNode, Double> cost_map, Point... p) {
		super(p);
		this.cost_map = cost_map;
	}
	
	public Double getCost(SearchSpaceNode node) {
		Double cost = cost_map.get(node);
		if(cost == null)
			throw new IllegalArgumentException("Node is not in the domain of the cost function.");
		return cost;
	}
}
